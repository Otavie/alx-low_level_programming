# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o) 
NAME = school
RM = rm -f
CFLAG = -Wall -Werror -Wextra -pedantic

.PHONY: clean oclean fclean re

%.o:%.c m.h
	$(CC) -c $< -o $@

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
